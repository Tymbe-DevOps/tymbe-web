{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Provizorní formulář - 2. krok' %}

{% block content %}

	<main id="main" class="main">
		<div class="p-form p-form--b2b u-pt-12">
			<div class="row-main">
				<div class="p-form__content">
					<h1 class="u-vhide">
						Registrace
					</h1>
					<div class="grid grid--x-5">
						<div class="grid__cell size--6-12@md size--5-12@lg">
							{% include '@components/form/registration.twig' with {
								props: {
									classes: ['b-white'],
									controller: 'Registration',
									title: 'Staň se Tymberem',
									apiUrl: 'https://api.tymbe.com/registration',
									nextStep: './registrace-krok-3.html',
									steps: {
										classes: ['u-mt-3 u-mb-3'],
										items: [
											{
												done: true,
												text: 'První krok'
											},
											{
												isActive: true,
												text: 'Druhý krok'
											},
											{
												text: 'Třetí krok'
											},
										]
									},
									btnBack: 'Zpět',
									btnNext: 'Další',
									text: 'Už máš u nás účet? <a href="#">Přihlas se.</a>',
									inpGroupsName: 'contact',
									inpGroups: [
										{
											inpTitle: 'Adresa trvalého bydliště',
											selectLabel: 'Stát - trvalé bydliště',
											selectName: 'permanentAddress.country',
											selectRequired: true,
											options: [
												{
													value: '',
													disable: true,
													title: 'Stát - trvalé bydliště'
												},
												{
													value: 'cz',
													title: 'Česká republika'
												},
												{
													value: 'sk',
													title: 'Slovenská republika'
												},
											],
											inputs: [
												{
													label: 'Ulice',
													name: 'permanentAddress.street',
													required: true,
													type: 'text'
												},
												{
													label: 'Město',
													name: 'permanentAddress.city',
													required: true,
													type: 'text'
												},
												{
													label: 'PSČ',
													name: 'permanentAddress.zip',
													required: true,
													type: 'text'
												}
											],
										},
										{
											inpTitle: 'Kontaktní adresa',
											selectLabel: 'Stát - kontaktní adresa',
											selectName: 'contactAddress.country',
											options: [
												{
													value: '',
													disable: true,
													title: 'Stát - kontaktní adresa'
												},
												{
													value: 'cz',
													title: 'Česká republika'
												},
												{
													value: 'sk',
													title: 'Slovenská republika'
												},
											],
											inputs: [
												{
													label: 'Ulice',
													name: 'contactAddress.street',
													type: 'text'
												},
												{
													label: 'Město',
													name: 'contactAddress.city',
													type: 'text'
												},
												{
													label: 'PSČ',
													name: 'contactAddress.zip',
													type: 'text'
												}
											],
										},
										{
											inpTitle: 'Telefonní číslo',
											inputs: [
												{
													label: 'Telefonní číslo',
													name: 'phone',
													type: 'tel',
													required: true,
													pattern: "^\+(420|421)?[0-9]{3}?[0-9]{3}?[0-9]{3}$",
													tooltipText: 'Datum narození zadávejte ve formátu: +420123456789'
												}
											],
										},
									],
								}
							}%}
