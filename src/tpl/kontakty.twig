{% extends '@layout/layout.twig' %}
{% set pageTitle = 'Контакти' %}
{% set isContact = true %}
{% set metaDescriptionContent = 'У тебе є питання? У нас є відповіді! Зв яжись з нами, і ми надамо все, що тебе цікавить. Спробуй онлайн-платформу для набору, навчання та залучення тимчасових працівників!' %}

{% block content %}

	<main id="main" class="main">
		{% include '@components/box/intro.twig' with {
			props: {
				classes: ['b-intro--cut'],
				background: 'intro-bg.jpg',
				title: 'Контакти',
				text: 'У тебе є питання? У нас є відповіді! Зв яжись з нами, і ми додамо все, що тебе цікавить.',
			}
		} %}
		<div class="row-main">
			<div class="u-mt--11 u-mb-9">
				<div class="b-white b-contact">
					<div class="grid grid--x-0">
						<div class="grid__cell size--6-12@md">
							<form class="b-contact__form" action="?" data-controller="Contact"
							data-contact-url-value="{{apiBaseUrl}}/contactForm" data-action="submit->Contact#send">
								<h2 class="b-contact__title h3">
									Зв яжись з нами
								</h2>
								<p class="message message--ok u-hide" data-contact-target="success">Дякуємо.<br>Ми зв'яжемося з вами якнайшвидше.<p>
								<p class="message message--error u-hide" data-contact-target="message"><p>
								<p class="inp js-registration__inp" data-controller="FocusInput">
									<label for="contactInputName" class="inp-label">
										Твоє ім’я
									</label>
									<span class="inp-fix">
										<input type="text" name="contactInputName" id="contactInputName" placeholder="Jméno" class="inp-text" required data-action="focus->FocusInput#focus blur->FocusInput#blur input->Contact#inputValidate">
									</span>
								</p>
								<p class="inp js-registration__inp" data-controller="FocusInput">
									<label for="contactInputEmail" class="inp-label">
										E-mail
									</label>
									<span class="inp-fix">
										<input type="email" name="contactInputEmail" id="contactInputEmail" placeholder="E-mail" class="inp-text"
										required data-action="focus->FocusInput#focus blur->FocusInput#blur input->Contact#inputValidate">
									</span>
								</p>
								<p class="inp js-registration__inp" data-controller="FocusInput">
									<label for="contactInputMessage" class="inp-label">
										Повідомлення
									</label>
									<span class="inp-fix">
										<textarea name="contactInputMessage" id="contactInputMessage" placeholder="Zpráva" class="inp-text" cols="40" rows="6"
										required data-action="focus->FocusInput#focus blur->FocusInput#blur input->Contact#inputValidate"></textarea>
									</span>
								</p>

								<p class="u-mt-2">
									<button type="submit" class="btn btn-loader" data-contact-target="loader" data-action="click->Contact#formValidate">
										<span class="btn__text">
											Відправити
										</span>
									</button>
								</p>
							</form>
						</div>
						<div class="grid__cell size--6-12@md">
							<div class="b-contact__table">
								<h2 class="b-contact__title h3">
									TYMBE, a.s.
								</h2>
								<table>
									<tbody>
										<tr>
											<th>
												<span class="item-icon">
													{% include '@components/core/icon-svg/icon-svg.twig' with {
														props: {
															classes: ['item-icon__icon'],
															name: 'message'
														}
													} %}
													E-mail
												</span>
											</th>
											<td>
												<a href="mailto:tymbe@tymbe.com">tymbe@tymbe.com</a>
											</td>
										</tr>
										<tr>
											<th>
												<span class="item-icon">
													{% include '@components/core/icon-svg/icon-svg.twig' with {
														props: {
															classes: ['item-icon__icon'],
															name: 'location'
														}
													} %}
													Address
												</span>
											</th>
											<td>
												Podolská 2731/33, Líšeň<br>
												628 00 Brno
											</td>
										</tr>
										<tr>
											<th>
												<span class="item-icon">
													{% include '@components/core/icon-svg/icon-svg.twig' with {
														props: {
															classes: ['item-icon__icon'],
															name: 'company'
														}
													} %}
													IČO:
												</span>
											</th>
											<td>
												05892538
											</td>
										</tr>
										<tr>
											<th>
												<span class="item-icon">
													{% include '@components/core/icon-svg/icon-svg.twig' with {
														props: {
															classes: ['item-icon__icon'],
															name: 'company'
														}
													} %}
													DIČ:
												</span>
											</th>
											<td>
												CZ05892538
											</td>
										</tr>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</main>

{% endblock %}
